<div class="container">
  <div class="row">
    <h4 class="mx-auto my-4" style="text: #82392E;">＊＊＊　<%= @blog.title %>　＊＊＊</h4>
  </div>
  
  <div class="mb-4 text-right">
    <%= @blog.created_at %>
  </div>
  
  <div class="row">
    <% @blog_images.each do |blog_image| %>
      <div class="col-3 mx-auto" >
        <%= image_tag blog_image.image.url, class: "img col-12", style: "object-fit: cover;" %>
      </div>
    <% end %>
  </div>
  
  <div class="row">
    
  </div>
</div>