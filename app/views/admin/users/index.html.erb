<div class="container">
  <div class="row">
    <h4 class="m-5 px-4 bg-light">会員一覧</h4>
  </div>

  <div class="row col-md-9 mx-auto">
    <table class="table table-inverse">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admin_user_path(user.id), class: "link" do %>
                <%= user.last_name %><%= user.first_name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted == true %>
                <strong class="text-secondary"><%= user_status_name(user) %></strong>
              <% else %>
                <strong class="text-success"><%= user_status_name(user) %></strong>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row justify-content-center mb-4">
    <%= paginate @users %>
  </div>
</div>