<div class="container">
  <div class="row">
    <h3 class="mx-auto mt-3"><strong>〜 Blogs 〜</strong></h3>
  </div>
  
  <div class="row">
    <table class="table">
      <tbody>
        <% @blogs.each do |blog| %>
          <tr>
            <td>
              <%= link_to blog_path(blog.id), class: "link" do %>
                <h5><%= blog.title %></h5>
                <p class="text-black-50"><%= blog.created_at.to_s(:datetime_jp) %></p>
              <% end %>
            </td>
            <td class="col-2">
              <% if blog.blog_images.present? %>
                <%= image_tag blog.blog_images[0].image.url, class: "col-12 img" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>