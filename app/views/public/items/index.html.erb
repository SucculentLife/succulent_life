<div class="container">
  <div class="row">
    <h3 class="mx-auto"><strong>〜 Items 〜</strong></h3>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3 px-2">
        <%= link_to item_path(item.id), class: "link" do %>
          <%= image_tag item.photos.image.url, class: "img img-fluid" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>