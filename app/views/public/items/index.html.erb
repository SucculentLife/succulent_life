
<div class="container">
  <div class="row">
    <h3 class="mx-auto mt-3"><strong>〜 Items 〜</strong></h3>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3 p-3">
        <%= link_to item_path(item.id), class: "link" do %>
          <div class="card">
            <%= image_tag item.photos[0].image.url, class: "col-12 img", style: "object-fit: cover;" %>
            <div class="card-img-overlay text-light mt-auto p-0 d-flex align-items-center justify-content-center" style="background-color: rgba(0,0,0,0.5); width: 100%; height: 15%;">
              <%= item.name %>　¥<%= (item.price * 1.1).floor.to_s(:delimited) %>-
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="mx-auto my-3">
    <%= paginate @items %>
  </div>
  </div>
</div>